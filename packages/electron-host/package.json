{
  "name": "@beak/electron-host",
  "description": "A feathery cross-platform API crafting tool",
  "version": "1.1.7-beta.5",
  "private": true,
  "author": {
    "name": "Alexander Forbes-Reed (0xdeafcafe)",
    "email": "info@getbeak.app"
  },
  "homepage": "https://getbeak.app",
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf tsconfig.tsbuildinfo",
    "prebuild": "rm -rf ./dist-react/ && copyfiles -u 3 \"../app/dist/**/*\" ./dist-react/",
    "build": "cross-env NODE_ENV=production electron-esbuild build",
    "prepackage": "rm -rf ./dist-electron",
    "prepackage:release": "rm -rf ./dist-electron",
    "package": "electron-builder -mw --publish never",
    "package:release": "electron-builder -mw --publish always",
    "start": "cross-env NODE_ENV=development electron-esbuild dev",
    "typecheck": "tsc",
    "test": "echo Skipped."
  },
  "main": "./dist/main/main.js",
  "dependencies": {
    "@beak/app": "*",
    "@beak/common": "*",
    "@beak/crpc": "*",
    "@beak/ksuid": "*",
    "@beak/requester-node": "*",
    "asar": "^3.2.0",
    "date-fns": "^2.29.1",
    "electron-esbuild": "^6.0.0",
    "electron-releases": "^3.1097.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.2.1",
    "esbuild": "^0.15.1",
    "fs-extra": "^10.1.0",
    "isomorphic-git": "^1.19.1",
    "lodash.clonedeep": "^4.5.0",
    "source-map-support": "^0.5.21",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@getbeak/types": "1.0.0-prerelease.2",
    "@getbeak/types-realtime-value": "^1.0.0-prerelease.8",
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash.clonedeep": "^4.5.7",
    "@types/uuid": "^8.3.4",
    "copyfiles": "^2.4.1",
    "electron": "20.0.2",
    "electron-builder": "23.3.3",
    "electron-debug": "^3.2.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-notarize": "^1.2.1"
  }
}
