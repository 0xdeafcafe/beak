{
  "name": "@beak/electron-host",
  "description": "A feathery cross-platform API crafting tool",
  "version": "1.1.0-beta.5",
  "private": true,
  "author": {
    "name": "Alexander Forbes-Reed (0xdeafcafe)",
    "email": "info@getbeak.app"
  },
  "homepage": "https://getbeak.app",
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf tsconfig.tsbuildinfo",
    "prebuild": "rm -rf ./dist-react/ && copyfiles -u 3 \"../app/dist/**/*\" ./dist-react/",
    "build": "cross-env NODE_ENV=production electron-esbuild build",
    "prepackage": "rm -rf ./dist-electron",
    "prepackage:release": "rm -rf ./dist-electron",
    "package": "electron-builder -mwl --publish never",
    "package:release": "electron-builder -mwl --publish always",
    "start": "cross-env NODE_ENV=development electron-esbuild dev",
    "typecheck": "tsc",
    "test": "echo Skipped."
  },
  "main": "./dist/main/main.js",
  "dependencies": {
    "asar": "^3.0.3",
    "date-fns": "^2.28.0",
    "electron-esbuild": "^3.0.0",
    "electron-releases": "^3.961.0",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.6.5",
    "esbuild": "^0.14.32",
    "fs-extra": "^10.0.1",
    "isomorphic-git": "^1.17.0",
    "source-map-support": "^0.5.21",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@beak/app": "^0.0.0",
    "@beak/common": "^0.0.0",
    "@beak/requester-node": "^0.0.0",
    "@types/electron-devtools-installer": "^2.2.1",
    "@types/fs-extra": "^9.0.13",
    "@types/uuid": "^8.3.4",
    "copyfiles": "^2.4.1",
    "electron": "17.1.2",
    "electron-builder": "22.14.13",
    "electron-debug": "^3.2.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-notarize": "^1.2.1"
  }
}
