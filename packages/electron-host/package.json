{
  "name": "@beak/electron-host",
  "description": "A feathery cross-platform API crafting tool",
  "version": "1.0.0-beta.9",
  "private": true,
  "author": {
    "name": "Alexander Forbes-Reed (0xdeafcafe)",
    "email": "info@getbeak.app"
  },
  "homepage": "https://getbeak.app",
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf tsconfig.tsbuildinfo",
    "prebuild": "rm -rf ./dist-react/ && copyfiles -u 3 \"../app/dist/**/*\" ./dist-react/",
    "build": "electron-esbuild build",
    "prepackage": "rm -rf ./dist-electron",
    "prepackage:release": "rm -rf ./dist-electron",
    "package": "electron-builder -mwl --publish never",
    "package:release": "electron-builder -mwl --publish always",
    "start": "electron-esbuild dev",
    "typecheck": "tsc --noEmit",
    "test": "echo Skipped."
  },
  "main": "./dist/main/main.js",
  "dependencies": {
    "asar": "^3.0.3",
    "date-fns": "^2.22.1",
    "electron-esbuild": "^2.0.0",
    "electron-releases": "^3.783.0",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.3.9",
    "esbuild": "^0.12.25",
    "fs-extra": "^10.0.0",
    "isomorphic-git": "^1.9.1",
    "source-map-support": "^0.5.19",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@beak/app": "^0.0.0",
    "@beak/common": "^0.0.0",
    "@beak/requester-node": "^0.0.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/fs-extra": "^9.0.12",
    "@types/uuid": "^8.3.1",
    "copyfiles": "^2.4.1",
    "electron": "14.0.0",
    "electron-builder": "22.14.2",
    "electron-debug": "^3.2.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-notarize": "^1.0.0"
  }
}
