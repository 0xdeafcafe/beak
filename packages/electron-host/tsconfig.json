{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist-ts",
    "composite": true,

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "es2022",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vite/client"]
  },
  "references": [{
    "path": "../common"
  }, {
    "path": "../requester-node"
  }],
  "exclude": [
    "node_modules",
    "dist",
    "dist-ts",
    "dist-react",
    "dist-electron",
    "../app",
    "../common",
    "../requester-node"
  ]
}
