{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist-ts",

    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "types": ["react", "vite/client"]
  },
  "references": [{
    "path": "../common"
  }, {
    "path": "../design-system"
  }],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-ts"
  ]
}
