{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",

    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018",
    "moduleResolution": "node",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,

    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],

    "paths": {
      "@beak/app": ["packages/app/src"],
      "@beak/app/*": ["packages/app/src/*"],

      "@beak/common": ["packages/common/src"],
      "@beak/common/*": ["packages/common/src/*"],

      "@beak/design-system": ["packages/design-system/src"],
      "@beak/design-system/*": ["packages/design-system/src/*"],
      
      "@beak/electron-host": ["packages/electron-host/src"],
      "@beak/electron-host/*": ["packages/electron-host/src/*"],

      "@beak/requester-node": ["packages/requester-node/src"],
      "@beak/requester-node/*": ["packages/requester-node/src/*"],

      "@beak/share": ["packages/share/src"],
      "@beak/share/*": ["packages/share/src/*"],

      "@beak/website": ["packages/website/src"],
      "@beak/website/*": ["packages/website/src/*"],

      "@getbeak/types": ["packages/types/src"],
      "@getbeak/types/*": ["packages/types/src/*"],
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "typings"
  ]
}
