{
	"compilerOptions": {
		"composite": true,
		"incremental": true,
		"outDir": "./dist",
		"baseUrl": ".",

		"declaration": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "ES2018",
		"moduleResolution": "node",
		"module": "CommonJS",
		"allowSyntheticDefaultImports": true,

		"typeRoots": [
			"./typings",
			"./node_modules/@types"
		],

		"paths": {
			"@beak/app": ["packages/app/src"],
			"@beak/app/*": ["packages/app/src/*"],
	  
			"@beak/common": ["packages/common/src"],
			"@beak/common/*": ["packages/common/src/*"],
	  
			"@beak/crpc": ["packages/crpc/src"],
			"@beak/crpc/*": ["packages/crpc/src/*"],
	  
			"@beak/design-system": ["packages/design-system/src"],
			"@beak/design-system/*": ["packages/design-system/src/*"],
			
			"@beak/electron-host": ["packages/electron-host/src"],
			"@beak/electron-host/*": ["packages/electron-host/src/*"],
	  
			"@beak/json-client": ["packages/json-client/src"],
			"@beak/json-client/*": ["packages/json-client/src/*"],
	  
			"@beak/ksuid": ["packages/ksuid/src"],
			"@beak/ksuid/*": ["packages/ksuid/src/*"],
	  
			"@beak/requester-node": ["packages/requester-node/src"],
			"@beak/requester-node/*": ["packages/requester-node/src/*"],
	  
			"@beak/squawk": ["packages/squawk/src"],
			"@beak/squawk/*": ["packages/squawk/src/*"],
	  
			"@beak/web-share": ["packages/web-share/src"],
			"@beak/web-share/*": ["packages/web-share/src/*"],
	  
			"@beak/web-website": ["packages/web-website/src"],
			"@beak/web-website/*": ["packages/web-website/src/*"],
	  
			"@getbeak/types": ["packages/types/src"],
			"@getbeak/types/*": ["packages/types/src/*"],
	  
			"@getbeak/types-realtime-value": ["packages/types-realtime-value/src"],
			"@getbeak/types-realtime-value/*": ["packages/types-realtime-value/src/*"]
		}
	},
	"exclude": [
		"node_modules",
		"dist",
		"typings"
	]
}
