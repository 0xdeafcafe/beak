{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",

    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018",
    "moduleResolution": "node",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,

    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],

    "paths": {
      "@beak/app-beak": ["packages/apps/beak/src"],
      "@beak/app-beak/*": ["packages/apps/beak/src/*"],
      "@beak/app-share": ["packages/apps/share/src"],
      "@beak/app-share/*": ["packages/apps/share/src/*"],
      "@beak/app-website": ["packages/apps/website/src"],
      "@beak/app-website/*": ["packages/apps/website/src/*"],

      "@beak/host-electron": ["packages/hosts/electron/src"],
      "@beak/host-electron/*": ["packages/hosts/electron/src/*"],

      "@beak/shared-common": ["packages/shared/common/src"],
      "@beak/shared-common/*": ["packages/shared/common/src/*"],
      "@beak/shared-design-system": ["packages/shared/design-system/src"],
      "@beak/shared-design-system/*": ["packages/shared/design-system/src/*"],
      "@beak/shared-requester-node": ["packages/shared/requester-node/src"],
      "@beak/shared-requester-node/*": ["packages/shared/requester-node/src/*"],
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "typings"
  ]
}
