{
  "name": "beak",
  "description": "A feathery cross-platform API crafting tool",
  "private": true,
  "author": {
    "name": "Alexander Forbes-Reed (0xdeafcafe)",
    "email": "info@getbeak.app"
  },
  "homepage": "https://getbeak.app",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/electron-builder",
      "**/electron-builder/**"
    ]
  },
  "engines": {
    "yarn": "^1.4.2"
  },
  "resolutions": {
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.8"
  },
  "scripts": {
    "build": "lerna run build --stream",
    "build:website": "lerna run build --stream --scope @beak/website",
    "typecheck": "lerna exec --stream yarn typecheck",
    "prepackage": "yarn build",
    "prepackage:release": "yarn build",
    "package": "lerna run package --stream --scope @beak/electron-host",
    "package:release": "lerna run package:release --stream --scope @beak/electron-host",
    "start": "lerna exec --parallel --concurrency 1 --stream --scope '@beak/{app,electron-host}' yarn start",
    "start:website": "lerna exec --parallel --concurrency 1 --stream --scope '@beak/website' yarn start",
    "test": "lerna run test --parallel",
    "lint": "eslint --ext .tsx --ext .ts './packages/'",
    "unfuck": "lerna clean && yarn --force",
    "postinstall": "node ./node-module-overrides/index.js"
  },
  "devDependencies": {
    "@types/sanitize-html": "^2.6.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.5.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "lerna": "^4.0.0",
    "react-spring": "^9.3.2",
    "sanitize-html": "^2.6.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@cuvva/ksuid": "^1.0.2",
    "@monaco-editor/react": "^4.3.1",
    "@sentry/cli": "^1.71.0",
    "@sentry/electron": "^2.5.4",
    "@sentry/react": "^6.16.1",
    "@sentry/tracing": "^6.16.1",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/url-parse": "^1.4.5",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "chokidar": "^3.5.2",
    "cross-env": "^7.0.3",
    "hw-fingerprint": "^2.1.0",
    "keytar": "^7.7.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "tslog": "^3.3.0",
    "url-parse": "^1.5.3",
    "valid-filename": "^4.0.0",
    "vite": "^2.7.3",
    "vite-plugin-sentry": "^1.0.12"
  }
}
