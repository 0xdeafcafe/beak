{
  "name": "beak",
  "description": "A feathery cross-platform API crafting tool",
  "private": true,
  "author": {
    "name": "Alexander Forbes-Reed (0xdeafcafe)",
    "email": "info@getbeak.app"
  },
  "homepage": "https://getbeak.app",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/electron-builder",
      "**/electron-builder/**",
      "**/electron-webpack",
      "**/electron-webpack/**"
    ]
  },
  "engines": {
    "yarn": "^1.4.2"
  },
  "resolutions": {
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8"
  },
  "scripts": {
    "build": "NODE_ENV=production lerna run build --stream",
    "build:website": "NODE_ENV=production lerna run build --stream --scope @beak/website",
    "prepackage": "yarn build",
    "prepackage:release": "yarn build",
    "package": "lerna run package --stream --scope @beak/electron-host",
    "package:release": "lerna run package:release --stream --scope @beak/electron-host",
    "start": "NODE_ENV=development lerna exec --parallel --concurrency 1 --stream --scope '@beak/{app,electron-host}' yarn start",
    "start:website": "NODE_ENV=development lerna exec --parallel --concurrency 1 --stream --scope '@beak/website' yarn start",
    "test": "lerna run test --parallel",
    "lint": "eslint -c .eslintrc --ext .tsx --ext .ts './packages/'",
    "unfuck": "lerna clean && yarn --force",
    "postinstall": "node ./node_module_overrides/index.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.29.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "lerna": "^4.0.0",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "@cuvva/ksuid": "^1.0.0",
    "@electron/remote": "^1.2.0",
    "@sentry/electron": "^2.5.3",
    "@sentry/react": "^6.12.0",
    "@sentry/tracing": "^6.12.0",
    "@sentry/webpack-plugin": "^1.17.1",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-router": "^5.1.16",
    "@types/react-router-dom": "^5.1.8",
    "chokidar": "^3.5.2",
    "connected-react-router": "^6.9.1",
    "html-webpack-plugin": "4",
    "keytar": "^7.7.0",
    "native-ext-loader": "^2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "tslog": "^3.2.0"
  }
}
