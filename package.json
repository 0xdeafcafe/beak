{
  "name": "beak",
  "description": "A feathery cross-platform API crafting tool",
  "private": true,
  "author": {
    "name": "Alexander Forbes-Reed (0xdeafcafe)",
    "email": "info@getbeak.app"
  },
  "homepage": "https://getbeak.app",
  "workspaces": {
    "packages": [
      "apps-host/*",
      "apps-web/*",
      "packages/*"
    ],
    "nohoist": [
      "**/electron-builder",
      "**/electron-builder/**"
    ]
  },
  "engines": {
    "yarn": "^1.4.2"
  },
  "resolutions": {
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.2"
  },
  "scripts": {
    "build": "lerna run build --stream",
    "build:apps-host": "lerna run build --stream --scope '@beak/apps-host-*'",
    "build:apps-host-electron": "lerna run build --stream --scope '@beak/apps-host-electron'",
    "build:apps-host-web": "lerna run build --stream --scope '@beak/apps-host-web'",
    "build:apps-web": "lerna run build --stream --scope '@beak/apps-web-*'",
    "build:apps-web-marketing": "lerna run build --stream --scope @beak/apps-web-marketing",
    "build:apps-web-share": "lerna run build --stream --scope @beak/apps-web-share",
    "prepackage": "yarn build",
    "prepackage:release": "yarn build",
    "package": "lerna run package --stream --scope @beak/apps-host-electron",
    "package:release": "lerna run package:release --stream --scope @beak/apps-host-electron",
    "start:apps-host-electron": "lerna exec --parallel --concurrency 1 --stream --scope '@beak/{apps-host-electron,ui}' yarn start",
    "start:electron-host-screenshot": "SCREENSHOT_SIZING=true lerna exec --parallel --concurrency 1 --stream --scope '@beak/{apps-host-electron,ui}' yarn start",
    "start:apps-host-web": "lerna exec --scope '@beak/apps-host-web' yarn start",
    "start:apps-web-marketing": "lerna exec --parallel --concurrency 1 --stream --scope '@beak/apps-web-marketing' yarn start",
    "start:apps-web-share": "lerna exec --parallel --concurrency 1 --stream --scope '@beak/apps-web-share' yarn start",
    "test": "jest",
    "lint": "eslint --ext .tsx --ext .ts .",
    "typecheck": "lerna run typecheck --stream",
    "unfuck": "lerna clean && yarn --force",
    "postinstall": "node ./build/package-overrides/index.js",
    "release-safety": "yarn typecheck && yarn lint && yarn build"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.14",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.11",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^20.5.9",
    "@types/react": "^18.0.31",
    "@types/react-dom": "^18.0.11",
    "@types/sanitize-html": "^2.9.0",
    "@types/semver": "^7.5.1",
    "@types/url-parse": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vitejs/plugin-react": "^4.0.4",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.48.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-jest": "^26.8.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "lerna": "^7.2.0",
    "nx": "^16.7.4",
    "react-spring": "^9.7.2",
    "sanitize-html": "^2.11.0",
    "semver": "^7.5.4",
    "ts-md5": "^1.3.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-sentry": "^1.3.0"
  },
  "dependencies": {
    "@sentry/cli": "^2.20.6",
    "@sentry/electron": "^4.10.0",
    "@sentry/react": "^7.66.0",
    "@sentry/tracing": "^7.66.0",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "hw-fingerprint": "^2.1.0",
    "jest": "^27.5.1",
    "keytar": "^7.9.0",
    "prettier": "^3.0.3",
    "pretty-bytes": "^6.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.15.0",
    "react-router-dom": "^6.15.0",
    "tslog": "^4.9.2",
    "url-parse": "^1.5.10",
    "valid-filename": "^4.0.0",
    "vm2": "^3.9.19"
  }
}
