{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist-ts",
    "composite": true,

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "es2022",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "references": [{
    "path": "../../packages/common"
  }, {
    "path": "../../packages/common-host"
  }, {
    "path": "../../packages/ksuid"
  }, {
    "path": "../../packages/requester-node"
  }, {
    "path": "../../packages/crpc"
  }],
  "exclude": [
    "node_modules",
    "dist",
    "dist-ts",
    "dist-react",
    "dist-electron",
    "../app",
    "../common",
    "../requester-node"
  ]
}
