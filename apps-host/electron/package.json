    "electron-releases": "^3.1171.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.1",
    "esbuild": "^0.19.2",
    "fs-extra": "^11.1.1",
    "isomorphic-git": "^1.24.5",
    "lodash.clonedeep": "^4.5.0",
